root = true

# All files
[*]
indent_style = space

# Xml files
[*.xml]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Proj files
[*.csproj]
indent_size = 2

# Targets files
[{*.props,*.targets}]
indent_size = 2

# Verify settings
[*.{received,verified}.{json,txt,xml}]
charset = "utf-8-bom"
end_of_line = lf
indent_size = unset
indent_style = unset
insert_final_newline = false
tab_width = unset
trim_trailing_whitespace = false