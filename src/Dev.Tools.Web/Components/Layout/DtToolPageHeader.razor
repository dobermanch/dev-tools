<DtPageHeader Caption="@Context.Localization.GetToolTitle(ToolDefinition)" ShowBackButton="true">
    <Actions>
        <FavoriteButton Class="mr-2" ToolDefinition="@ToolDefinition"/>
    </Actions>
    <Content>
        <MudGrid>
            <MudItem xs="12" Class="mud-card-content">
                <KeywordChips ToolDefinition="@ToolDefinition"/>
            </MudItem>

            <MudItem xs="12" Class="mud-card-content">
                <MudText Typo="Typo.body2">@Context.Localization.GetToolDescription(ToolDefinition)</MudText>
            </MudItem>
        </MudGrid>
    </Content>
</DtPageHeader>

@code {
    [Inject]
    private WebContext Context { get; set; } = null!;
    
    [Parameter] 
    public ToolDefinition ToolDefinition { get; set; } = null!;
}