<MudCard @onclick="NavigateToToolPage" Elevation="1" Class="tool-card">
    <MudCardHeader Class="pb-0">
        <CardHeaderAvatar>
            <MudIcon Class="mt-1" Color="Color.Primary" Icon="@GetToolIcon()" Size="Size.Large" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">@Context.Localization.GetToolTitle(Tool)</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <FavoriteButton ToolDefinition="@Tool" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent Class="d-flex align-content-space-between flex-wrap flex-grow-1">
        <MudText
            GutterBottom="true"
            Typo="Typo.body2"
            Style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; line-height: 1.5;">
            @Context.Localization.GetToolDescription(Tool)
        </MudText>
        <KeywordChips ToolDefinition="@Tool" SingleLine="true" Class="ml-n1"/>
    </MudCardContent>
</MudCard>

<style>
    .tool-card {
        border: 1px solid transparent;
        transition: border-color 0.2s ease;
    }

    .tool-card:hover {
        border-color: var(--mud-palette-primary);
    }
</style>