<MudCard @onclick="NavigateToToolPage">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Primary">
                <MudIcon Color="Color.Dark" Icon="@Icons.Material.Outlined.Construction" Size="Size.Medium" />
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">@Context.Localization.GetToolTitle(Tool)</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <FavoriteButton ToolDefinition="@Tool" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent Class="d-flex align-content-space-between flex-wrap flex-grow-1">
        <MudText GutterBottom="true" Typo="Typo.body2">@Context.Localization.GetToolDescription(Tool)</MudText>
        <KeywordChips ToolDefinition="@Tool"/>
    </MudCardContent>
</MudCard>