@typeparam T

<MudGrid Class="align-center">
    @if (LabelPosition == LabelPositionType.Left)
    {
        <MudItem xs="4">
            <MudText Typo="Typo.body1">@Label</MudText>
        </MudItem>
    }
    
    <MudItem xs="@(LabelPosition == LabelPositionType.Left ? 8 : 12)">
        <MudTextField
            T="@T"
            ShrinkLabel="true"
            Label="@(LabelPosition == LabelPositionType.Inline ? Label : null)"
            Value="@Value"
            ValueChanged="@ValueChanged"
            MaxLength="@MaxLength"
            DebounceInterval="@DebounceInterval"
            OnDebounceIntervalElapsed="@OnDebounceIntervalElapsed"
            Error="@Error"
            ErrorText="@ErrorText"
            ReadOnly="@ReadOnly"
            Variant="Variant.Outlined"
            Margin="Margin.Dense"
            Format="@Format"
            InputType="@InputType"
            Lines="@Lines"
            AutoGrow="@(Lines > 1)"
            MaxLines="@Lines"
            Adornment="@(ShowCopyButton ? Adornment.End : Adornment.None)"
            IconSize="Size.Small"
            AdornmentIcon="@Icons.Material.Outlined.CopyAll"
            OnAdornmentClick="async () => await OnCopyToClipboardAsync()"/>
    </MudItem>
</MudGrid>