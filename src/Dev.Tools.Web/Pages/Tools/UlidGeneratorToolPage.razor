@page "/tools/ulid-generator"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-4">
    <MudCardContent>
        <DtSection Id="config" Class="mt-0">
            <MudGrid Class="align-center" Spacing="4">
                <MudItem xs="12" md="6">
                    <DtSlider
                        T="int"
                        Label="@_localizer["Slider.TokenCount.Label"]"
                        Value="@_args.Count"
                        MinValue="1"
                        MaxValue="100"
                        ValueChanged="@OnCountValueChangedAsync"
                    />
                </MudItem>
                <MudItem xs="12" md="6">
                    <DtSelectEnum
                        T="UlidGeneratorTool.UlidType"
                        Label="@_localizer["Select.Type.Label"]"
                        Value="@_args.Type"
                        ValueToDisplay="@(type => Context.Localization.GetToolEnum(_toolDefinition, type))"
                        ValueChanged="OnTypeValueChangedAsync"
                    />
                </MudItem>
            </MudGrid>
        </DtSection>

        <DtSection Id="output" ShowDivider="true">
            <MudGrid Class="align-center" Spacing="4">
                <MudItem xs="12">
                    <DtTextField
                        T="string"
                        Value="@GetUlids()"
                        Label="@_localizer["TextField.Result.Label"]"
                        ReadOnly="true"
                        Lines="10"
                        LabelPosition="LabelPositionType.Inline"
                    />
                </MudItem>
            </MudGrid>
        </DtSection>
    </MudCardContent>
</MudCard>
