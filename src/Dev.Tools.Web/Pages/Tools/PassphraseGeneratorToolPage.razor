@page "/tools/passphrase-generator"

<DtToolPageHeader ToolDefinition="@_toolDefinition" />

<MudCard Class="my-2">
    <MudCardContent>
        <MudStack AlignItems="AlignItems.Start">
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.body1">Word Count</MudText>
                <MudSlider T="int" Value="@_args.WordCount" Min="1" Max="20"
                           ValueChanged="OnWordCountValueChangedAsync"/>
                <MudNumericField
                    T="int"
                    Value="@_args.WordCount"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Min="1"
                    Max="20"
                    ValueChanged="OnWordCountValueChangedAsync"/>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.body1">Phrase Count</MudText>
                <MudSlider T="int" Value="@_args.PhraseCount" Min="1" Max="100" ValueChanged="OnPhraseCountValueChangedAsync"/>
                <MudNumericField
                    T="int"
                    Value="@_args.PhraseCount"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Min="1"
                    Max="100"
                    ValueChanged="OnPhraseCountValueChangedAsync"/>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudSwitch
                    T="bool"
                    Value="@_args.Capitalize"
                    Label="Capitalize first letter"
                    Color="Color.Primary"
                    ValueChanged="OnCapitalValueChangedAsync"/>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.body1">Separator</MudText>
                <MudTextField
                    T="char?"
                    @bind-Value="@_args.Separator"
                    MaxLength="1"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    DebounceInterval="500"
                    OnDebounceIntervalElapsed="OnValueChangedAsync"/>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.body1">Salt</MudText>
                <MudTextField
                    T="string"
                    @bind-Value="@_args.Salt"
                    Label="Salt"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    DebounceInterval="500"
                    OnDebounceIntervalElapsed="OnValueChangedAsync"/>
            </MudStack>
        </MudStack>
        <MudStack Spacing="4">
            <MudTextField
                T="string"
                Value="@GetPassphrase()"
                Label="Passphrases"
                ReadOnly="true"
                Lines="5"
                AutoGrow="true"
                MaxLines="10"
                Variant="Variant.Outlined"
                Margin="Margin.Dense"
                Adornment="Adornment.End"
                AdornmentIcon="@Icons.Material.Outlined.CopyAll"
                OnAdornmentClick="async () => await OnCopyToClipboardAsync(GetPassphrase())"/>
        </MudStack>
    </MudCardContent>
</MudCard>
