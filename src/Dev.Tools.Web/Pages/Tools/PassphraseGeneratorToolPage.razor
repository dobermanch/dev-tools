@page "/tools/passphrase-generator"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-2">
    <MudCardContent>
        <MudGrid Class="align-center">
            <MudItem xs="12">
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <DtSlider
                            T="int"
                            Label="Word Count"
                            Value="@_args.WordCount"
                            MinValue="1"
                            MaxValue="20"
                            ValueChanged="OnWordCountValueChangedAsync"/>
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <DtTextField
                            T="char?"
                            Label="Separator"
                            @bind-Value="@_args.Separator"
                            MaxLength="1"
                            OnDebounceIntervalElapsed="OnValueChangedAsync"/>
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <DtSlider
                            T="int"
                            Label="Phrase Count"
                            Value="@_args.PhraseCount"
                            MinValue="1"
                            MaxValue="100"
                            ValueChanged="OnPhraseCountValueChangedAsync"/>
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <DtTextField
                            T="string"
                            Label="Salt"
                            @bind-Value="@_args.Salt"
                            OnDebounceIntervalElapsed="OnValueChangedAsync"/>
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <MudSwitch
                        T="bool"
                        Value="@_args.Capitalize"
                        Label="Capitalize first letter"
                        Color="Color.Primary"
                        ValueChanged="OnCapitalValueChangedAsync"/>
                </MudStack>
            </MudItem>
        </MudGrid>


        <MudDivider
            Class="my-5"
            DividerType="DividerType.FullWidth"/>

        <MudGrid Spacing="3">
            <MudItem xs="12">
                <DtTextField
                    T="string"
                    Value="@GetPassphrase()"
                    Label="Passphrases"
                    ReadOnly="true"
                    Lines="10"
                    LabelPosition="LabelPositionType.Inline"
                />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
