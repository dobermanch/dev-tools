@page "/tools/passphrase-generator"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-2">
    <MudCardContent>
        <MudGrid Class="align-center">
            <MudItem xs="12">
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <DtSlider
                            T="int"
                            Label="@_localizer["Slider.WordCount.Label"]"
                            Value="@_args.WordCount"
                            MinValue="1"
                            MaxValue="20"
                            ValueChanged="OnWordCountValueChangedAsync"/>
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <DtTextField
                            T="char?"
                            Label="@_localizer["TextField.Separator.Label"]"
                            @bind-Value="@_args.Separator"
                            MaxLength="1"
                            OnDebounceIntervalElapsed="OnValueChangedAsync"/>
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <DtSlider
                            T="int"
                            Label="@_localizer["Slider.PhraseCount.Label"]"
                            Value="@_args.PhraseCount"
                            MinValue="1"
                            MaxValue="100"
                            ValueChanged="OnPhraseCountValueChangedAsync"/>
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <DtTextField
                            T="string"
                            Label="@_localizer["TextField.Salt.Label"]"
                            @bind-Value="@_args.Salt"
                            OnDebounceIntervalElapsed="OnValueChangedAsync"/>
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <MudSwitch
                        T="bool"
                        Value="@_args.Capitalize"
                        Label="@_localizer["Switch.Capitalize.Label"]"
                        Color="Color.Primary"
                        ValueChanged="OnCapitalValueChangedAsync"/>
                </MudStack>
            </MudItem>
        </MudGrid>


        <MudDivider
            Class="my-5"
            DividerType="DividerType.FullWidth"/>

        <MudGrid Spacing="3">
            <MudItem xs="12">
                <DtTextField
                    T="string"
                    Value="@GetPassphrase()"
                    Label="@_localizer["TextField.Result.Label"]"
                    ReadOnly="true"
                    Lines="10"
                    LabelPosition="LabelPositionType.Inline"
                />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
