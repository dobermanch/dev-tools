@page "/tools/base64-encoder"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-2">
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12">
                <MudStack AlignItems="AlignItems.Start">
                    <MudSwitch T="bool" @bind-Value="@_args.UrlSafe" Label="@_localizer["Switch.SafeUrl.Label"]" Color="Color.Primary"/>
                    <MudSwitch T="bool" @bind-Value="@_args.InsertLineBreaks" Label="@_localizer["Switch.LineBreaks.Label"]"
                               Color="Color.Primary"/>
                </MudStack>
            </MudItem>
            <MudItem xs="12">
                <DtTextField
                    T="string"
                    Label="@_localizer["TextField.Input.Label"]"
                    Value="@_args.Text"
                    Error="@_result.HasErrors"
                    ErrorText="@_result.ErrorCodes.Select(it => Context.Localization.GetErrorCode(it)).FirstOrDefault("")"
                    Lines="10"
                    OnDebounceIntervalElapsed="OnStringToEncodeValueChangedAsync"
                    LabelPosition="LabelPositionType.Inline"
                />
            </MudItem>
        </MudGrid>

        <MudDivider
            Class="my-5"
            DividerType="DividerType.FullWidth"/>

        <MudGrid Spacing="3">
            <MudItem xs="12">
                <DtTextField
                    T="string"
                    Value="@_result.Text"
                    Label="@_localizer["TextField.Result.Label"]"
                    ReadOnly="true"
                    Lines="10"
                    LabelPosition="LabelPositionType.Inline"
                />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
