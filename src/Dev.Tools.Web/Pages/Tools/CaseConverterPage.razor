@page "/tools/case-converter"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-2">
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12">
                <DtTextField
                    T="string"
                    Value="@_args.Text"
                    OnDebounceIntervalElapsed="OnValueChangedAsync"
                    Error="@(_results.Any(it => it.Value?.HasErrors ?? false))"
                    ErrorText="@ErrorMessage()"
                    Label="Text to Convert"
                    LabelPosition="LabelPositionType.Inline"
                    Lines="5"
                />
            </MudItem>
        </MudGrid>

        <MudDivider
            Class="my-5"
            DividerType="DividerType.FullWidth"/>

        <MudGrid Spacing="3">
            @foreach (var result in _results)
            {
                <MudItem xs="12">
                    <DtTextField
                        T="string"
                        Value="@result.Value?.Text"
                        Label="@result.Key.ToString()"
                        ReadOnly="true"/>
                </MudItem>
            }
        </MudGrid>

    </MudCardContent>
</MudCard>