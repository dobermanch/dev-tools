@page "/tools/token-generator"

<DtToolPageHeader ToolDefinition="@_toolDefinition" />

<MudCard Class="my-2">
    <MudCardContent>
        <MudStack AlignItems="AlignItems.Start">
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.body1">Token Length</MudText>
                <MudSlider T="int" Value="@_args.TokenLength" Min="1" Max="512" ValueChanged="OnTokenLengthValueChangedAsync"/>
                <MudNumericField
                    T="int"
                    Value="@_args.TokenLength"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Min="1"
                    Max="512"
                    ValueChanged="OnTokenLengthValueChangedAsync"/>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.body1">Token Count</MudText>
                <MudSlider T="int" Value="@_args.TokenCount" Min="1" Max="100"
                           ValueChanged="OnTokenCountValueChangedAsync"/>
                <MudNumericField
                    T="int"
                    Value="@_args.TokenCount"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Min="1"
                    Max="100"
                    ValueChanged="OnTokenCountValueChangedAsync"/>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudSwitch
                    T="bool"
                    Value="@_args.Lowercase"
                    Label="Lowercase"
                    Color="Color.Primary"
                    ValueChanged="OnLowercaseValueChangedAsync"/>
                <MudSwitch
                    T="bool"
                    Value="@_args.Uppercase"
                    Label="Uppercase"
                    Color="Color.Primary"
                    ValueChanged="OnUppercaseValueChangedAsync"/>
                <MudSwitch
                    T="bool"
                    Value="@_args.Numbers"
                    Label="Numbers"
                    Color="Color.Primary"
                    ValueChanged="OnNumbersValueChangedAsync"/>
                <MudSwitch
                    T="bool"
                    Value="@_args.Symbols"
                    Label="Symbols"
                    Color="Color.Primary"
                    ValueChanged="OnSymbolsValueChangedAsync"/>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudTextField
                    T="string"
                    @bind-Value="@_args.Alphabet"
                    Label="Alphabet"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    DebounceInterval="500"
                    OnDebounceIntervalElapsed="OnValueChangedAsync"/>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudTextField
                    T="string"
                    @bind-Value="@_args.ExcludeSymbols"
                    Label="Exclude Symbols"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    DebounceInterval="500"
                    OnDebounceIntervalElapsed="OnValueChangedAsync"/>
            </MudStack>
        </MudStack>
        <MudStack Spacing="4">
            <MudTextField
                T="string"
                Value="@GetTokens()"
                Label="Tokens"
                ReadOnly="true"
                Lines="5"
                AutoGrow="true"
                MaxLines="10"
                Variant="Variant.Outlined"
                Margin="Margin.Dense"
                Adornment="Adornment.End"
                AdornmentIcon="@Icons.Material.Outlined.CopyAll"
                OnAdornmentClick="async () => await OnCopyToClipboardAsync(GetTokens())"/>
        </MudStack>
    </MudCardContent>
</MudCard>
