@page "/tools/token-generator"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-2">
    <MudCardContent>
        <MudGrid Class="align-center">
            <MudItem xs="12">
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <DtSlider
                            T="int"
                            Label="Token Length"
                            Value="@_args.TokenLength"
                            MinValue="1"
                            MaxValue="512"
                            ValueChanged="OnTokenLengthValueChangedAsync"/>
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <DtTextField
                            T="string"
                            Label="Alphabet"
                            @bind-Value="@_args.Alphabet"
                            ShowCopyButton="false"
                            OnDebounceIntervalElapsed="OnValueChangedAsync"/>
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <DtSlider
                            T="int"
                            Label="Token Count"
                            Value="@_args.TokenCount"
                            MinValue="1"
                            MaxValue="100"
                            ValueChanged="OnTokenCountValueChangedAsync"/>
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <DtTextField
                            T="string"
                            Label="Exclude Symbols"
                            @bind-Value="@_args.ExcludeSymbols"
                            ShowCopyButton="false"
                            OnDebounceIntervalElapsed="OnValueChangedAsync"/>
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <MudSwitch
                        T="bool"
                        Value="@_args.Lowercase"
                        Label="Lowercase"
                        Color="Color.Primary"
                        ValueChanged="OnLowercaseValueChangedAsync"/>
                    <MudSwitch
                        T="bool"
                        Value="@_args.Uppercase"
                        Label="Uppercase"
                        Color="Color.Primary"
                        ValueChanged="OnUppercaseValueChangedAsync"/>
                    <MudSwitch
                        T="bool"
                        Value="@_args.Numbers"
                        Label="Numbers"
                        Color="Color.Primary"
                        ValueChanged="OnNumbersValueChangedAsync"/>
                    <MudSwitch
                        T="bool"
                        Value="@_args.Symbols"
                        Label="Symbols"
                        Color="Color.Primary"
                        ValueChanged="OnSymbolsValueChangedAsync"/>
                </MudStack>
            </MudItem>
        </MudGrid>

        <MudDivider
            Class="my-5"
            DividerType="DividerType.FullWidth"/>

        <MudGrid Spacing="3">
            <MudItem xs="12">
                <DtTextField
                    T="string"
                    Value="@GetTokens()"
                    Label="Tokens"
                    ReadOnly="true"
                    Lines="10"
                    LabelPosition="LabelPositionType.Inline"
                />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
