@page "/tools/base64-decoder"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-2">
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12">
                <DtTextField
                    T="string"
                    Label="@_localizer["TextField.Input.Label"]"
                    Value="@_args.Text"
                    Error="@_result.HasErrors"
                    ErrorText="@_result.ErrorCodes.Select(it => Context.Localization.GetErrorCode(it)).FirstOrDefault("")"
                    LabelPosition="LabelPositionType.Inline"
                    Lines="10"
                    OnDebounceIntervalElapsed="OnDecodeStringValueChangedAsync"
                />
            </MudItem>
        </MudGrid>

        <MudDivider
            Class="my-5"
            DividerType="DividerType.FullWidth"/>

        <MudGrid Spacing="3">
            <MudItem xs="12">
                <DtTextField
                    T="string"
                    Value="@_result.Data"
                    Label="@_localizer["TextField.Result.Label"]"
                    ReadOnly="true"
                    Lines="10"
                    LabelPosition="LabelPositionType.Inline"
                />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
