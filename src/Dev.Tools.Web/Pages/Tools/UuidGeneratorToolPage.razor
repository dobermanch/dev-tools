@page "/tools/uuid-generator"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-2">
    <MudCardContent>
        <MudGrid Class="align-center">
            <MudItem xs="12">
                <MudGrid Class="align-center">
                    <MudItem xs="12" md="6">
                        <DtSlider
                            T="int"
                            Label="Token Count"
                            Value="@_args.Count"
                            MinValue="1"
                            MaxValue="100"
                            ValueChanged="@OnCountValueChangedAsync"/>
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <DtSelectEnum
                            T="UuidGeneratorTool.UuidType"
                            Label="Type"
                            Value="@_args.Type"
                            ValueChanged="OnTypeValueChangedAsync"
                        />
                    </MudItem>
                </MudGrid>
            </MudItem>

            @if (_args.Type is UuidGeneratorTool.UuidType.V3 or UuidGeneratorTool.UuidType.V5)
            {
                <MudItem xs="12">
                    <MudGrid Class="align-center">
                        <MudItem xs="12" md="6">
                            <DtTextField
                                T="string"
                                Label="Name"
                                @bind-Value="@_args.Name"
                                OnDebounceIntervalElapsed="@OnValueChangedAsync"
                            />
                        </MudItem>
                        <MudItem xs="12" md="6">
                            <DtTextField
                                T="Guid?"
                                Label="Namespace"
                                @bind-Value="@_args.Namespace"
                                OnDebounceIntervalElapsed="@OnValueChangedAsync"
                            />
                        </MudItem>
                    </MudGrid>
                </MudItem>
            }

            @if (_args.Type == UuidGeneratorTool.UuidType.V7)
            {
                <MudItem xs="12">
                    <DtTextField
                        T="DateTime?"
                        @bind-Value="@_args.Time"
                        Label="Time"
                        Format="s"
                        InputType="InputType.DateTimeLocal"
                        OnDebounceIntervalElapsed="OnValueChangedAsync"
                    />
                </MudItem>
            }
        </MudGrid>


        <MudDivider
            Class="my-5"
            DividerType="DividerType.FullWidth"/>

        <MudGrid Spacing="3">
            <MudItem xs="12">
                <DtTextField
                    T="string"
                    Value="@GetUuids()"
                    Label="UUIDs"
                    ReadOnly="true"
                    Lines="10"
                    LabelPosition="LabelPositionType.Inline"
                />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
