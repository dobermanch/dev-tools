@page "/tools/uuid-generator"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-4">
    <MudCardContent>
        <DtSection Id="config" Class="mt-0">
            <MudGrid Class="align-center" Spacing="4">
                <MudItem xs="12" md="6">
                    <DtSlider
                        T="int"
                        Label="@_localizer["Slider.TokenCount.Label"]"
                        Value="@_args.Count"
                        MinValue="1"
                        MaxValue="100"
                        ValueChanged="@OnCountValueChangedAsync"/>
                </MudItem>
                <MudItem xs="12" md="6">
                    <DtSelectEnum
                        T="UuidGeneratorTool.UuidType"
                        Label="@_localizer["Select.Type.Label"]"
                        Value="@_args.Type"
                        ValueToDisplay="@(type => Context.Localization.GetToolEnum(_toolDefinition, type))"
                        ValueChanged="OnTypeValueChangedAsync"
                    />
                </MudItem>
                @if (_args.Type is UuidGeneratorTool.UuidType.V3 or UuidGeneratorTool.UuidType.V5)
                {
                    <MudItem xs="12" md="6">
                        <DtTextField
                            T="string"
                            Label="@_localizer["TextField.Name.Label"]"
                            @bind-Value="@_args.Name"
                            OnDebounceIntervalElapsed="@OnValueChangedAsync"
                        />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <DtTextField
                            T="Guid?"
                            Label="@_localizer["TextField.Namespace.Label"]"
                            @bind-Value="@_args.Namespace"
                            OnDebounceIntervalElapsed="@OnValueChangedAsync"
                        />
                    </MudItem>
                }
                @if (_args.Type == UuidGeneratorTool.UuidType.V7)
                {
                    <MudItem xs="12">
                        <DtTextField
                            T="DateTime?"
                            @bind-Value="@_args.Time"
                            Label="@_localizer["TextField.Time.Label"]"
                            Format="s"
                            InputType="InputType.DateTimeLocal"
                            OnDebounceIntervalElapsed="OnValueChangedAsync"
                        />
                    </MudItem>
                }
                <MudItem xs="12" md="4">
                    <DtSelectEnum
                        T="UuidGeneratorTool.UuidCase"
                        Label="@_localizer["Select.Case.Label"]"
                        Value="@_args.Case"
                        ValueToDisplay="@(c => Context.Localization.GetToolEnum(_toolDefinition, c))"
                        ValueChanged="OnCaseValueChangedAsync"
                    />
                </MudItem>
                <MudItem xs="12" md="4">
                    <DtSelectEnum
                        T="UuidGeneratorTool.UuidBrackets"
                        Label="@_localizer["Select.Brackets.Label"]"
                        Value="@_args.Brackets"
                        ValueToDisplay="@(b => Context.Localization.GetToolEnum(_toolDefinition, b))"
                        ValueChanged="OnBracketsValueChangedAsync"
                    />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudSwitch 
                        Value="@_args.Hyphens" 
                        Label="@_localizer["Switch.Hyphens.Label"]" 
                        Color="Color.Primary" T="bool" 
                        ValueChanged="OnHyphensValueChangedAsync" />
                </MudItem>
            </MudGrid>
        </DtSection>

        <DtSection Id="output" ShowDivider="true">
            <MudGrid Class="align-center" Spacing="4">
                <MudItem xs="12">
                    <DtTextField
                        T="string"
                        Value="@GetUuids()"
                        Label="@_localizer["TextField.Result.Label"]"
                        ReadOnly="true"
                        Lines="10"
                        LabelPosition="LabelPositionType.Inline"
                    />
                </MudItem>
            </MudGrid>
        </DtSection>
    </MudCardContent>
</MudCard>
