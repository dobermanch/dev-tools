@page "/tools/json-formatter"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-4">
    <MudCardContent>
        <DtSection Id="config" Class="mt-0">
            <MudGrid Class="align-center" Spacing="4">
                <MudItem xs="12" md="6">
                    <DtSelectEnum
                        T="JsonFormatterTool.SortDirection"
                        Label="@_localizer["Select.SortKeys.Label"]"
                        Value="@_sortKeys"
                        ValueToDisplay="@(type => Context.Localization.GetToolEnum(_toolDefinition, type))"
                        ValueChanged="OnSortKeysChangedAsync"
                    />
                </MudItem>
                <MudItem xs="12" md="6">
                    <DtSelectEnum
                        T="JsonFormatterTool.TextCase"
                        Label="@_localizer["Select.KeyFormat.Label"]"
                        Value="@_keyFormat"
                        ValueToDisplay="@(type => Context.Localization.GetToolEnum(_toolDefinition, type))"
                        ValueChanged="OnKeyFormatChangedAsync"
                    />
                </MudItem>
                <MudItem xs="12" md="6">
                    <DtSlider
                        T="int"
                        Label="@_localizer["Slider.IndentSize.Label"]"
                        Value="@_indentSize"
                        MinValue="0"
                        MaxValue="8"
                        ValueChanged="@OnIndentSizeChangedAsync"/>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudSwitch
                        T="bool"
                        Value="@_excludeEmpty"
                        Label="@_localizer["Switch.ExcludeEmpty.Label"]"
                        Color="Color.Primary"
                        ValueChanged="OnExcludeEmptyChangedAsync"/>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudSwitch
                        T="bool"
                        Value="@_compact"
                        Label="@_localizer["Switch.Compact.Label"]"
                        Color="Color.Primary"
                        ValueChanged="OnCompactChangedAsync"/>
                </MudItem>
            </MudGrid>
        </DtSection>

        <DtSection Id="io" ShowDivider="true">
            <MudGrid Class="align-center" Spacing="4">
                <MudItem xs="12" md="6">
                    <DtTextField
                        T="string"
                        Label="@_localizer["TextField.Input.Label"]"
                        @bind-Value="@_json"
                        OnDebounceIntervalElapsed="@OnValueChangedAsync"
                        LabelPosition="LabelPositionType.Inline"
                        Lines="15"/>
                </MudItem>
                <MudItem xs="12" md="6">
                    <DtTextField
                        T="string"
                        Value="@(_result?.Json ?? string.Empty)"
                        Label="@_localizer["TextField.Result.Label"]"
                        ReadOnly="true"
                        Lines="15"
                        LabelPosition="LabelPositionType.Inline"/>
                </MudItem>
            </MudGrid>
        </DtSection>
    </MudCardContent>
</MudCard>
