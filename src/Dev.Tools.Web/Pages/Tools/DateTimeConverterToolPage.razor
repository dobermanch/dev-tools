@page "/tools/date-convert"

<DtToolPageHeader ToolDefinition="@_toolDefinition" />

<MudCard Class="my-2">
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12" md="6">
                <DtTextField
                    T="string"
                    Value="@_args.Date"
                    Label="Input Date"
                    OnDebounceIntervalElapsed="OnValueChangedAsync"
                    Error="@(_results.Any(it => it.Value?.HasErrors ?? false))"
                    ErrorText="@ErrorMessage()"/>
    
            </MudItem>
            <MudItem xs="12" md="6">
                <DtSelectEnum 
                    T="DateTimeConverterTool.DateFormatType"
                    Label="Date Format"
                    Value="@_args.From"
                    ValueChanged="OnFromFormatSelectedAsync"
                />
            </MudItem>
            
        </MudGrid>

        <MudDivider 
            Class="my-5"
            DividerType="DividerType.FullWidth"
        />

        <MudGrid Spacing="3">
            @foreach (var result in _results)
            {
                <MudItem xs="12">
                    <DtTextField 
                        T="string"
                        Value="@result.Value?.Time" 
                        Label="@result.Key.ToString()"
                        LabelWidth="120" 
                        ReadOnly="true"/>
                </MudItem>
            }
        </MudGrid>
    </MudCardContent>
</MudCard>
