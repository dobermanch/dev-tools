@page "/tools/int-base-converter"

<DtToolPageHeader ToolDefinition="@_toolDefinition"/>

<MudCard Class="my-4">
    <MudCardContent>
        <DtSection Id="input" Class="mt-0">
            <MudGrid Class="align-center" Spacing="4">
                <MudItem xs="12" md="4">
                    <DtTextField
                        T="string"
                        Label="@_localizer["TextField.Input.Label"]"
                        @bind-Value="@_inputValue"
                        OnDebounceIntervalElapsed="@OnValueChangedAsync"
                    />
                </MudItem>
                <MudItem xs="12" md="4">
                    <DtSelectEnum
                        T="IntegerBaseConverterTool.BaseType"
                        Label="@_localizer["Select.InputBase.Label"]"
                        Value="@_inputBase"
                        ValueToDisplay="@(type => Context.Localization.GetToolEnum(_toolDefinition, type))"
                        ValueChanged="OnInputBaseValueChangedAsync"
                    />
                </MudItem>
                <MudItem xs="12" md="4">
                    <DtSelectEnum
                        T="IntegerBaseConverterTool.BaseType"
                        Label="@_localizer["Select.TargetBase.Label"]"
                        Value="@_targetBase"
                        ValueToDisplay="@(type => Context.Localization.GetToolEnum(_toolDefinition, type))"
                        ValueChanged="OnTargetBaseValueChangedAsync"
                    />
                </MudItem>
            </MudGrid>
        </DtSection>

        <DtSection Id="output" ShowDivider="true">
            <MudGrid Class="align-center" Spacing="4">
                <MudItem xs="12">
                    <DtTextField
                        T="string"
                        Value="@(_result?.Data ?? string.Empty)"
                        Label="@_localizer["TextField.Result.Label"]"
                        ReadOnly="true"
                        Lines="3"
                        LabelPosition="LabelPositionType.Inline"
                    />
                </MudItem>
            </MudGrid>
        </DtSection>
    </MudCardContent>
</MudCard>
