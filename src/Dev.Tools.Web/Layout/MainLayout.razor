@inherits LayoutComponentBase

<MudThemeProvider @ref="_themeProvider" IsDarkMode="@IsDarkMode" ObserveSystemThemeChange="@ObserveSystemThemeChange" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" 
                       Edge="Edge.Start" OnClick="@DrawerToggle" />
        <MudText Typo="Typo.h5" Class="ml-3">Dev Tools</MudText>
        <MudSpacer />

        <MudSelect T="string" Placeholder="Type to search"  Clearable="true" AnchorOrigin="Origin.BottomLeft"
                   TransformOrigin="Origin.TopLeft" Variant="Variant.Outlined" InputMode="InputMode.text" 
                   OnKeyUp="OnSearchKeyUpAsync" 
                   AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Primary" Margin="Margin.Dense">
            <MudSelectItem Value="@("foo")">Foo</MudSelectItem>
            <MudSelectItem Value="@("bar")">Bar</MudSelectItem>
        </MudSelect>
        
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" aria-label="github" />
        <MudIconButton Icon="@LightModeIcon" Color="Color.Inherit" Edge="Edge.End" OnClick="@ChangeThemeModeAsync" />
        <MudIconButton Icon="@Icons.Material.Outlined.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>

    <MudDrawer Elevation="2" ClipMode="DrawerClipMode.Always" Open="@IsDrawerOpen">
        <NavMenu/>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
